<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/countries"
    android:background="#5C75E1EF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFW Job Agency"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Countries"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="110dp"
        android:layout_marginStart="125dp"/>

    <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_marginTop="190dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/japan"/>

    <Button
        android:id="@+id/btnJapan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/rounded_button"
        android:text="Japan" />

    <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_marginTop="350dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/usa"/>

    <Button
        android:id="@+id/btnUSA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/rounded_button"
        android:text="USA" />

    <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_marginTop="510dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/saudi"/>

    <Button
        android:id="@+id/btnSaudiArabia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/rounded_button"
        android:text="Saudi Arabia" />

</RelativeLayout>
